<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/lblTweetUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="Luciano Afranllie"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/lblTweetDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="4 minutes ago"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lblTweetMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sfdkjsahkdsskjdhsakjhdkjshfdshfk jhfkjhkjds fkjdsh fkjhfkhfkjsahfkjhskjfskjfh kjh kjhkjh"/>

</LinearLayout>
